extends ../base.pug

block content
  h3 document
    small

  .btn-group
    a(href=`/documents/${document.id}/edit`, class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit document
    a(href=`/documents/${document.id}/delete`, class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete document

  .media
    .media-left
      img(src=document.imageUrl || "http://placekitten.com/g/128/192")
    .media-body
      h4= document.title
        | &nbsp;
        small= document.publishedDate
      h5 By #{document.author||'unknown'}
      p= document.description
      small Added by #{document.createdBy}
